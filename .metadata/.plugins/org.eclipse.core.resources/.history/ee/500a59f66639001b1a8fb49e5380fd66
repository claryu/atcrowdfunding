   $(function(){
	   $("#button01").click(function(){
		   $.ajax({
	           "url":"jsontest/array.json",
	           "type":"post",
	           "data":{"array":[3,5,9]},
	           "dataType":"text",
	           "success":function(data){
	        	   alert(data);
	           },
	           "error":function(errorMsg){
	        	   alert(errorMsg);
	           }
	       });
	   });
	   
	   $("#button02").click(function(){
		   var array = [3,6,9];
		   var arrayStr = JSON.stringify(array);
           $.ajax({
               "url":"jsontest/array.json",
               "type":"post",
               "data":{"array":arrayStr},
               "dataType":"text",
               "success":function(data){
                   alert(data);
               },
               "error":function(errorMsg){
                   alert(errorMsg);
               }
           });
       });
	   
   });
   
</script>
